<div class="row">
  <div class="col-md-8 mx-auto">
    <article class="card">
      <div class="card-body">
        <h1 class="card-title"><%= @blog_post.title %></h1>
        
        <div class="mb-4 text-muted">
          <i class="fas fa-user"></i> By <%= @blog_post.author %> |
          <i class="fas fa-calendar"></i> <%= @blog_post.created_at.strftime("%B %d, %Y") rescue '' %>
        </div>

        <div class="blog-content">
          <%= simple_format(@blog_post.content) %>
        </div>

        <hr>
        
        <div class="mt-4">
          <%= link_to "Back to Blog", blog_posts_path, class: "btn btn-outline-primary" %>
        </div>
      </div>
    </article>
  </div>
</div>
