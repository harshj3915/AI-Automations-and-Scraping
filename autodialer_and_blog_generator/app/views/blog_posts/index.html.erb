<h1><i class="fas fa-pen-fancy"></i> AI Blog Generator</h1>

<div class="mb-3">
  <%= link_to raw('<i class="fas fa-magic"></i> Generate New Posts with AI'), generate_form_blog_posts_path, class: "btn btn-success btn-lg" %>
</div>

<div class="row">
  <% if @blog_posts.any? %>
    <% @blog_posts.each do |post| %>
      <div class="col-md-6 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= link_to post.title, blog_post_path(post) %></h5>
            <p class="card-text text-muted">
              <%= post.content.truncate(150) %>
            </p>
            <div class="d-flex justify-content-between align-items-center">
              <small class="text-muted">
                By <%= post.author %> | <%= post.created_at.strftime("%B %d, %Y") rescue '' %>
              </small>
              <%= link_to "Read More", blog_post_path(post), class: "btn btn-sm btn-outline-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="col-12">
      <div class="alert alert-info text-center">
        <h4><i class="fas fa-info-circle"></i> No blog posts yet</h4>
        <p class="mb-0">Click "Generate New Posts with AI" to create programming articles automatically!</p>
      </div>
    </div>
  <% end %>
</div>
